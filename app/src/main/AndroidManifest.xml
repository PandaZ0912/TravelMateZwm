<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".TravelMateApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelMate"
        tools:targetApi="31">
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TravelMate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.PostDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.TravelDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.OrderDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.HotelActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.TransportActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.TicketActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.FoodActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.TravelLogActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.AddTravelLogActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
        <activity
            android:name=".activities.EditTravelLogActivity"
            android:exported="false"
            android:theme="@style/Theme.TravelMate">
        </activity>
    </application>

</manifest>